<lambda>
    <Author>ExcelJet</Author>
    <Description>https://exceljet.net/formula/lambda-split-text-to-array</Description>
    <PipeDelimitedParameterAndDescription>text|Text to be delimited|delim|Characted delimiter</PipeDelimitedParameterAndDescription>
    <RefersTo>=LAMBDA(text,delim,
      TRANSPOSE(
           FILTERXML(
                "<x><y>" &amp; SUBSTITUTE(text,delim,"</y><y>") &amp; "</y></x>",
                 "//y"
             )
       )
)</RefersTo>
</lambda>